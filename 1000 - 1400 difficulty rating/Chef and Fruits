#include <iostream>

#include <cmath>

using namespace std;

int main() {
    // your code goes here
    int t;
    cin >> t;
    for (int i = 0; i < t; i++)
    {
        int n, m, k;
        cin >> n >> m >> k;
        if (abs(n - m) <= k)
        {
            cout << 0 << endl;
        }
        else
        {
            int diff = abs(n - m) - k;
            cout << diff << endl;
        }
    }
    return 0;
}
